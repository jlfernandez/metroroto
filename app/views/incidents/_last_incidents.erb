<ul id="last_incidents">
  <%@incidents.slice(0,10).each  do |incident|%>
    <li>
      <p>
      <%=link_to "#{incident.line.number}", incident.line, :class => "line_number line_"+incident.line.number %>
		  <span class="station">Estaci√≥n de <strong><%=incident.station.name%></strong><br /><span class="direction"><%= get_direction(incident) %></span></span>
		  <span class="timeago" title="<%=incident.date.getutc.iso8601%>"><%=l(incident.date, :format => 'long')%>.</span>
		  <span class="message"><%=incident.comment%>
		  <%unless incident.user.blank?%>
			  Por <a href ="http://twitter.com/<%=incident.user%>/status/<%=incident.twitter_id%>" target="_blank">@<%=incident.user%></a>
		  <%end%>	
		  </span><!-- message -->
		  </p>
		</li>
  <%end%>
</ul>