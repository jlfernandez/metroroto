<%= auto_discovery_link_tag(:atom, {:action => "show", :format => :atom}, 
 {:title => "Atom Feed"}) %>

<h1>Incidencias en la <%=@line.name%></h1>

<ul>
<%@line.incidents.each do |incident|%>
  <li><%=incident.comment%>. <%=incident.date%>. 
	<%unless incident.user.blank?%>
		Por <a href ="http://twitter.com/<%=incident.user%>/status/<%=incident.twitter_id%>" target="_blank">@<%=incident.user%></a></li>	
	<%end%>
<%end%>
</ul>